<!DOCTYPE html>
<html>
  <head>
    <title>FilmSchool</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render "layouts/menu" %>
    <% if user_signed_in? %>

      <%= current_user.email %> | <%= link_to('Logout', destroy_user_session_path, method: :delete) %>

    <% else %>

      <%= link_to('Login', new_user_session_path)  %> | <%= link_to('Sign Up', new_user_registration_path)  %>

    <% end %>

    <div class="container">

    <%= flash[:alert] %>
    <%= flash[:notice] %>
    <%= yield %>
  </div>
  </body>
</html>
